<section id='couchdb.constants' xmlns='http://docbook.org/ns/docbook' xmlns:xlink='http://www.w3.org/1999/xlink'>
 &reftitle.constants;
 &extension.constants;
 <para>
  <variablelist>

   <varlistentry>
    <term>
     <constant>COUCHDB_UUID_RANDOM</constant> 
     (<type>string</type>)
    </term>
    <listitem>
     <simpara>
              128 bits of pure random awesomeness.
     
     </simpara>
    </listitem>
   </varlistentry>

   <varlistentry>
    <term>
     <constant>COUCHDB_UUID_SEQUENTIAL</constant> 
     (<type>string</type>)
    </term>
    <listitem>
     <simpara>
              Monotonically increasing ids with random increments.
     
     </simpara>
    </listitem>
   </varlistentry>

   <varlistentry>
    <term>
     <constant>COUCHDB_UUID_UTC_RANDOM</constant> 
     (<type>string</type>)
    </term>
    <listitem>
     <simpara>
              Time since start of epoch, as 14 hex digits, followed by 18 random digits.
     
     </simpara>
    </listitem>
   </varlistentry>

   <varlistentry>
    <term>
     <constant>COUCHDB_UUID_UTC_ID_AND_PARAMETERS</constant> 
     (<type>string</type>)
    </term>
    <listitem>
     <simpara>
              Time since start of epoch, as 14 hex digits, followed by utc_id_suffix.
     
     </simpara>
    </listitem>
   </varlistentry>
  </variablelist>
 </para>
</section>

